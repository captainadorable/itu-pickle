package views

templ Panel(started bool, messages []string, fullname string, loggedin bool) {
<div class="w-11/12 h-11/12 flex text-white rounded-lg" hx-ext="ws" ws-connect="/ws">
  <div class="w-1/3 h-full bg-[#0f0f30] rounded-lg rounded-r-none">
  @LoginPanel(fullname, loggedin)
  </div>
  <div class="w-1/3 h-full bg-[#1B1A55] rounded-lg rounded-r-none">
    @Form(started)
  </div>
  <div class="w-1/3 h-full">
    @Log(messages)
  </div>
</div>
}
